@model Paginate<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mt-3 mb-3">Categories</h1>
    <a class="btn btn-success" asp-action="Create">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Datas)
                {
                    <tr>
                        
                        <td>
                            @Html.Raw(category.Name)
                        </td>

                        <td>
                            <a class="btn btn-info" asp-action="Detail" asp-route-id="@category.Id">Detail</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                            <form class="d-inline-block" method="post" asp-action="Delete" asp-route-id="@category.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                            
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="pagination-area mt-3 d-flex justify-content-center">
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item @(Model.HasPrevios ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                </li>


                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    <li class="page-item  @(Model.CurrentPage==i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i <span class="sr-only">(current)</span></a>
                    </li>
                }


                <li class="page-item @(Model.HasNext ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>



